@using PagedList.Mvc
@model PagedList.IPagedList<MyGame.UI.Models.Users.UserItemViewModel>


@{
    ViewBag.Title = "_UserItems";
}

<h2>Your Items: </h2>

    <div class="pagedList" data-target="#items">
        @Html.PagedListPager(Model, page => Url.Action("ShowItems", new { page }),
              PagedListRenderOptions
              .EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "items" }))
    </div>

@foreach (var item in Model) {
   <p>Item: @item.ItemName</p>
   <p>Attack: @item.ItemAttack</p>
   <p>Defense: @item.ItemArmor</p>
   <p>HP: @item.ItemHp</p>

}

